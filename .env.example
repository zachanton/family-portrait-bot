# .env.example
# =================================================================
#      >>>>> Aiogram Bot Template Settings <<<<<
#
#   Этот файл - шаблон. Скопируйте его в .env и заполните своими значениями.
#   Секретные ключи (API keys) хранятся отдельно и не управляются этой Pydantic-моделью.
# =================================================================

# --- Секреты (не входят в Pydantic Settings, загружаются отдельно) ---
TOGETHER_API_KEY=
NEBIUS_API_KEY=
OPENAI_API_KEY=
HF_TOKEN=

# --- Переменные для Docker Compose (для сервиса bento-flux) ---
MODEL_ID=black-forest-labs/FLUX.1-kontext-dev
GGUF_CKPT_PATH=/home/bentoml/models/flux1-kontext-dev-Q8_0.gguf

# =================================================================
#      >>>>> Pydantic Settings (управляются через settings.py) <<<<<
# =================================================================

# --- Bot Settings ---
BOT__TOKEN=123456:ABC-DEF1234567890
BOT__LOG_CHAT_ID=
BOT__SUPPORT_EMAIL="support@example.com"

# --- Database ---
DB__PG_LINK=postgresql+asyncpg://user:password@host:5432/db

# --- Redis ---
REDIS__HOST=redis
REDIS__PORT=6379
REDIS__PASSWORD=your_super_secret_password
REDIS__USERNAME=
REDIS__FSM_DB=1
REDIS__CACHE_DB=0

# --- Webhook ---
WEBHOOK__ADDRESS=https://your.domain.com/tg/webhooks/
WEBHOOK__SECRET_TOKEN=a_very_secret_webhook_token
WEBHOOK__LISTENING_HOST=0.0.0.0
WEBHOOK__LISTENING_PORT=8081

# --- Proxy Server ---
PROXY__BASE_URL=https://your.domain.com
PROXY__LISTENING_HOST=0.0.0.0
PROXY__LISTENING_PORT=8000

# --- AI Service URLs (опционально, есть дефолты) ---
# API_URLS__BENTOML=http://bento-flux:3000

# --- Общие настройки ---
LOGGING_LEVEL=20 # 10=DEBUG, 20=INFO
MODERATION_THRESHOLD=0.8

# =================================================================
#      >>>>> AI Generation Tiers Configuration <<<<<
#
#   Используйте префиксы (CHILD_GEN, IMG_EDIT) и разделитель "__"
#   для вложенных структур.
# =================================================================

# --- Child Generation Tiers ---
CHILD_GEN__DIMENSIONS__WIDTH=880
CHILD_GEN__DIMENSIONS__HEIGHT=1184

CHILD_GEN__TIERS__0__CLIENT="local"
CHILD_GEN__TIERS__0__MODEL="local_default"
CHILD_GEN__TIERS__0__PRICE=0

CHILD_GEN__TIERS__1__CLIENT="together"
CHILD_GEN__TIERS__1__MODEL="black-forest-labs/FLUX.1-kontext-dev"
CHILD_GEN__TIERS__1__PRICE=2

# ... (и так далее для других уровней)

# --- Image Edit Tiers ---
IMG_EDIT__DIMENSIONS__WIDTH=880
IMG_EDIT__DIMENSIONS__HEIGHT=1184

IMG_EDIT__TIERS__0__CLIENT="local"
IMG_EDIT__TIERS__0__MODEL="local_default"
IMG_EDIT__TIERS__0__PRICE=0

IMG_EDIT__TIERS__1__CLIENT="together"
IMG_EDIT__TIERS__1__MODEL="black-forest-labs/FLUX.1-kontext-dev"
IMG_EDIT__TIERS__1__PRICE=1

# ... (и так далее для других уровней)

# --- Upscale Settings ---
UPSCALE__DIMENSIONS__WIDTH=880
UPSCALE__DIMENSIONS__HEIGHT=1184
UPSCALE__CLIENT="local"
UPSCALE__MODEL="local_default"
UPSCALE__PRICE=0
UPSCALE__PROMPT="4k photo, cinematic, uhd, best quality"

# --- Non-generating AI features ---
AI_FEATURES__VISION_ANALYSIS__CLIENT="nebius"
AI_FEATURES__VISION_ANALYSIS__MODEL="Qwen/Qwen2.5-VL-72B-Instruct"

AI_FEATURES__JSON_FIXER__CLIENT="together"
AI_FEATURES__JSON_FIXER__MODEL="meta-llama/Meta-Llama-3.1-8B-Instruct-Turbo"

AI_FEATURES__PROMPT_ENHANCER__CLIENT="together"
AI_FEATURES__PROMPT_ENHANCER__MODEL="meta-llama/Llama-3.3-70B-Instruct-Turbo-Free"
